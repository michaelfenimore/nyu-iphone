<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:id="@+id/layout_goalscored"
  android:background="@drawable/background">
   	
	<TextView android:id="@+id/txt_kindofGoal"
   		android:textSize="16dp"
   		android:layout_height="wrap_content"
   		android:layout_width="wrap_content"
   		android:text="Kind of Goal:"
   		android:textColor="#000000"
   		android:layout_alignParentTop="true"
   		android:layout_marginLeft="10dp"
   		android:layout_marginTop="75dp">
   	</TextView>
   	
   	<Spinner
   		android:id="@+id/spinner_KindofGoal"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_below="@+id/txt_kindofGoal"
   		android:layout_marginLeft="8dp">
   	</Spinner>
   	
   	<TextView android:id="@+id/txt_teamStrength"
   		android:textSize="16dp"
   		android:layout_height="wrap_content"
   		android:layout_width="wrap_content"
   		android:text="Team Strength:"
   		android:textColor="#000000"
   		android:layout_toRightOf="@+id/spinner_KindofGoal"
   		android:layout_marginLeft="10dp"
   		android:layout_marginTop="75dp">
   	</TextView>
   	
   	<Spinner
   		android:id="@+id/spinner_TeamStrength"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_toRightOf="@+id/spinner_KindofGoal"
   		android:layout_below="@+id/txt_teamStrength"
   		android:layout_marginLeft="5dp">
   	</Spinner>
   	
   	<TextView android:id="@+id/txt_goalLocation"
   		android:textSize="16dp"
   		android:layout_height="wrap_content"
   		android:layout_width="wrap_content"
   		android:text="Goal Location:"
   		android:textColor="#000000"
   		android:layout_below="@+id/spinner_KindofGoal"
   		android:layout_marginLeft="10dp"
   		android:layout_marginTop="10dp">
   	</TextView>
   	
   	<Spinner
   		android:id="@+id/spinner_Location"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_below="@+id/txt_goalLocation"
   		android:layout_marginLeft="8dp">
   	</Spinner>
   	
   	<TextView android:id="@+id/txt_goaliePosition"
   		android:textSize="16dp"
   		android:layout_height="wrap_content"
   		android:layout_width="wrap_content"
   		android:text="Goalie Position:"
   		android:textColor="#000000"
   		android:layout_below="@+id/spinner_Location"
   		android:layout_marginLeft="10dp"
   		android:layout_marginTop="10dp">
   	</TextView>
   	
   	<Spinner
   		android:id="@+id/spinner_Position"
   		android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:layout_below="@+id/txt_goaliePosition"
   		android:layout_marginLeft="8dp">
   	</Spinner>
   	
   	<Button android:id="@+id/btn_save"
    		android:text="Save"
    		android:layout_height="wrap_content"
    		android:layout_width="150dp"
    		android:layout_below="@+id/spinner_Position"
    		android:layout_marginTop="30dp"
    		android:layout_marginLeft="5dp">
    </Button>
    
    <Button android:id="@+id/btn_cancel"
    		android:text="Cancel"
    		android:layout_height="wrap_content"
    		android:layout_width="150dp"
    		android:layout_below="@+id/spinner_Position"
    		android:layout_marginTop="30dp"
    		android:layout_marginLeft="160dp">
    </Button>
</RelativeLayout>
